{
	"reader":{
		"name":"BasicExampleFile",
		"type":"FileReader",
		"file":"",
		"delim":"|",
		"header":[
			"id",
			"value"
		],
		"has_header":true,
		"id_field":"id"
	},
	"metrics":[
		{
			"type":"FieldCount",
			"name":"FieldCount"
		},
		{	
			"type":"Populated",
			"name":"ValuePopulated",
			"field":"value"
		},
		{
			"type":"DateFormat",
			"name":"ValidDate",
			"field":"date",
			"format":"2006-01-02 15:04:05"
		},
		{
			"type":"FutureDate",
			"name":"FutureDate",
			"field":"date",
			"format":"2006-01-02 15:04:05"
		},
		{
			"type":"RegexTest",
			"name":"ValueIsAlpha",
			"field":"value",
			"regex":"[a-zA-Z]+"
		},
		{
			"type":"NumRecords",
			"name":"NumRecords"
		},
		{
			"type":"ValidValues",
			"name":"ValidValues",
			"field":"value",
			"values":[
				"a","b","c","d","e"
			]
		}
	],
	"evaluators":[
		{
			"evaluator":"ValueThreshold",
			"description":"FieldCount",
			"metric_name":"FieldCount",
			"value":"3",
			"threshold":1.0,
			"error_on":"<",
			"silence":false,
			"use_count":false
		},
		{
			"evaluator":"ValueThreshold",
			"description":"ValuePopulated",
			"metric_name":"ValuePopulated",
			"value":"true",
			"threshold":1.0,
			"error_on":"<",
			"silence":false,
			"use_count":false
		},
		{
			"evaluator":"ValueThreshold",
			"description":"DateFormat",
			"metric_name":"ValidDate",
			"value":"true",
			"threshold":1.0,
			"error_on":"<",
			"silence":false,
			"use_count":false
		},
		{
			"evaluator":"ValueThreshold",
			"description":"FutureDates",
			"metric_name":"FutureDate",
			"value":"true",
			"threshold":0.0,
			"error_on":">",
			"silence":false,
			"use_count":false
		},
		{
			"evaluator":"ValueThreshold",
			"description":"ValueIsAlpha",
			"metric_name":"ValueIsAlpha",
			"value":"true",
			"threshold":1.0,
			"error_on":"<",
			"silence":false,
			"use_count":false
		},
		{
			"evaluator":"VolumeTolerance",
			"description":"NumRecords",
			"metric_name":"NumRecords",
			"target":5,
			"min":0.75,
			"max":1.25
		},
		{
			"evaluator":"ValueThreshold",
			"description":"Value is [a-e]",
			"metric_name":"ValidValues",
			"value":"true",
			"threshold":1.0,
			"error_on":"<",
			"silence":false,
			"use_count":false
		}
	]
}
